<?xml version="1.0"?>

<robot xmlns:xacro="http://www.ros.org/wiki/xacro">
    <xacro:include filename="material.xacro"/>
    <xacro:include filename="inertial_macros.xacro" />
    <!-- <xacro:include filename="Arm.xacro" /> -->
    
    <link name="base_link">
    </link>

    <!--          CHASSIS           -->
    <joint name="chassis_joint" type="fixed">
        <origin xyz="-0.15 0.0 0.0" rpy="0.0 0.0 0.0" />
        <parent link="base_link" />
        <child link="chassis_link" />
    </joint>

    <link name="chassis_link">
        <visual>
            <origin xyz="0.25 0.0 0.1" rpy="0.0 0.0 0.0" />
            <geometry>
                <box size="0.5 0.5 0.2" />
            </geometry>
            <material name="blue" />
        </visual>
        <collision>
            <origin xyz="0.25 0.0 0.1" rpy="0.0 0.0 0.0" />
            <geometry>
                <box size="0.5 0.5 0.2" />
            </geometry>
        </collision>

        <xacro:inertial_box mass="5" x="0.5" y="0.5" z="0.2">
            <origin xyz="0.25 0 0.1" rpy="0 0 0" />
        </xacro:inertial_box>
    </link>
    <gazebo reference="chassis_link">
        <material>Gazebo/Blue</material>
    </gazebo>
    <!--          LEFT WHEEL           -->

    <joint name="left_wheel_joint" type="continuous">
        <origin xyz="0.0 0.28 0.0" rpy="-${pi/2} 0.0 0.0" />
        <parent link="base_link" />
        <child link="left_wheel_link" />
        <axis xyz="0.0 0.0 1" />
    </joint>

    <link name="left_wheel_link">
        <visual>
            <geometry>
                <cylinder radius="0.08" length="0.05" />
            </geometry>
            <material name="orange" />
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.08" length="0.05" />
            </geometry>
        </collision>

        <xacro:inertial_cylinder mass="0.5" length="0.05" radius="0.08">
            <origin xyz="0 0 0" rpy="0 0 0" />
        </xacro:inertial_cylinder>
    </link>

    <gazebo reference="left_wheel_link">
        <material>Gazebo/Orange</material>
    </gazebo>
    <!--          RIGHT WHEEL           -->

    <joint name="right_wheel_joint" type="continuous">
        <parent link="base_link" />
        <child link="right_wheel_link" />
        <origin xyz="0.0 -0.28 0.0" rpy="${pi/2} 0.0 0.0" />
        <axis xyz="0.0 0.0 -1" />
    </joint>

    <link name="right_wheel_link">
        <visual>
            <geometry>
                <cylinder radius="0.08" length="0.05" />
            </geometry>
            <material name="green" />
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.08" length="0.05" />
            </geometry>
        </collision>

        <xacro:inertial_cylinder mass="0.5" length="0.05" radius="0.08">
            <origin xyz="0 0 0" rpy="0 0 0" />
        </xacro:inertial_cylinder>
    </link>

    <gazebo reference="right_wheel_link">
        <material>Gazebo/Green</material>
    </gazebo>
    <!--          CASTER WHEEL           -->

    <joint name="caster_base_joint" type="fixed">
        <origin xyz="0.25 0.0 -0.025" rpy="0.0 0.0 0.0" />
        <parent link="base_link" />
        <child link="caster_base_link" />
    </joint>

    <link name="caster_base_link">
        <visual>
            <geometry>
                <cylinder radius="0.04" length="0.05" />
            </geometry>
            <material name="blue" />
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.04" length="0.05" />
            </geometry>
        </collision>

        <xacro:inertial_cylinder mass="0.2" length="0.05" radius="0.04">
            <origin xyz="0 0 0" rpy="0 0 0" />
        </xacro:inertial_cylinder>
    </link>
    <gazebo reference="caster_base_link">
        <material>Gazebo/Blue</material>
    </gazebo>


    <joint name="caster_joint" type="fixed">
        <origin xyz="0.0 0.0 -0.025" rpy="0.0 0.0 0.0" />
        <parent link="caster_base_link" />
        <child link="caster_wheel_link" />
    </joint>

    <link name="caster_wheel_link">
        <visual>
            <geometry>
                <sphere radius="0.03" />
            </geometry>
            <material name="green" />
        </visual>
        <collision>
            <geometry>
                <sphere radius="0.03" />
            </geometry>
        </collision>
        <xacro:inertial_sphere mass="0.6" radius="0.03">
            <origin xyz="0 0 0" rpy="0 0 0" />
        </xacro:inertial_sphere>
    </link>

    <gazebo reference="caster_wheel_link">
        <material>Gazebo/Green</material>
        <mu1 value="0.01" />
        <mu2 value="0.01" />
    </gazebo>

</robot>